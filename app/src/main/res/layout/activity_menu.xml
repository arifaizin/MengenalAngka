<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_hewansmall"
    tools:context="id.co.imastudio.mengenalangka.MenuActivity">

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="120dp"
        android:visibility="gone"></GridView>

    <ImageView
        android:id="@+id/btn_menu_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/gridView"
        android:layout_margin="10dp"
        android:layout_toEndOf="@+id/gridView"
        android:layout_toRightOf="@+id/gridView"
        app:srcCompat="@drawable/btn_back" />

    <ImageView
        android:id="@+id/btn_menu_next"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/menu_btn_play" />

    <ImageView
        android:id="@+id/btnBurungUnta"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_menu_back"
        android:layout_marginTop="39dp" />

    <ImageView
        android:id="@+id/btnBeo"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="91dp"
        android:layout_marginRight="91dp"
        android:layout_below="@+id/btn_menu_next"
        android:layout_toLeftOf="@+id/btn_menu_next"
        android:layout_toStartOf="@+id/btn_menu_next" />

    <ImageView
        android:id="@+id/btnGajah"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/btnSapi"
        android:layout_toLeftOf="@+id/btn_menu_next"
        android:layout_toStartOf="@+id/btn_menu_next" />

    <ImageView
        android:id="@+id/btnJerapah"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnBurungUnta" />

    <ImageView
        android:id="@+id/btnKera"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:layout_below="@+id/btnRusa"
        android:layout_alignRight="@+id/btnBeo"
        android:layout_alignEnd="@+id/btnBeo" />

    <ImageView
        android:id="@+id/btnMacan"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignTop="@+id/btnBurungUnta"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="13dp"
        android:layout_toLeftOf="@+id/btnKera"
        android:layout_toStartOf="@+id/btnKera" />

    <ImageView
        android:id="@+id/btnRusa"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_above="@+id/btnJerapah"
        android:layout_toEndOf="@+id/btnBurungUnta"
        android:layout_toRightOf="@+id/btnBurungUnta" />

    <ImageView
        android:id="@+id/btnSapi"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignEnd="@+id/btnGajah"
        android:layout_alignRight="@+id/btnGajah"
        android:layout_alignTop="@+id/btnMacan" />

    <ImageView
        android:id="@+id/btnZebra"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignTop="@+id/btnGajah"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_toEndOf="@+id/btnBurungUnta"
        android:layout_toRightOf="@+id/btnBurungUnta" />

    <ImageView
        android:id="@+id/btnUnta"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/btnKera"
        android:layout_alignRight="@+id/btn_menu_next"
        android:layout_alignEnd="@+id/btn_menu_next" />
</RelativeLayout>
